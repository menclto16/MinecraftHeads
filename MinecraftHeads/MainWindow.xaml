<Controls:MetroWindow x:Class="MinecraftHeads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftHeads"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch">
            <StackPanel>
                <StackPanel Width="200">
                    <TextBox x:Name="Username"></TextBox>
                    <Button Click="GetSkin">Get</Button>
                </StackPanel>
                <StackPanel Width="200">
                    <TextBox x:Name="LoginField"></TextBox>
                    <PasswordBox x:Name="PasswordField"></PasswordBox>
                    <Button Click="Login">Login</Button>
                    <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>
                    <Button Click="ChangeSkin">Change Skin</Button>
                </StackPanel>
            </StackPanel>
            <Image x:Name="SkinPreview" HorizontalAlignment="Center"></Image>
        </DockPanel>
    </Grid>
</Controls:MetroWindow>
